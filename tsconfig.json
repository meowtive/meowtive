{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config": ["app/config"],
      "@config/*": ["app/config/*"],
      "@resources": ["app/resources"],
      "@resources/*": ["app/resources/*"],
      "@screens": ["app/screens"],
      "@screens/*": ["app/screens/*"],
      "@components": ["app/components"],
      "@components/*": ["app/components/*"],
      "@types": ["app/types"],
      "@types/*": ["app/types/*"],
      "@routes": ["app/routes"],
      "@routes/*": ["app/routes/*"],
      "@utils": ["app/utils"],
      "@utils/*": ["app/utils/*"],
      "@services": ["app/services"],
      "@services/*": ["app/services/*"]
    }
  }
}
